# Fusepoint Platform — Exemple de configuration .env
# Copiez ce fichier en .env et ajustez les valeurs.

# Activation de la page d’installation (à activer temporairement)
INSTALL_ENABLED=false
# Autoriser l’écriture automatique du .env par l’assistant (sécurisé, par défaut désactivé)
ALLOW_INSTALL_WRITE=false

# URLs de l’application
FRONTEND_URL=http://localhost:5175
API_BASE_URL=http://localhost:3000

# Sécurité
# Générez des secrets longs et aléatoires (32+ caractères)
JWT_SECRET=
ENCRYPTION_KEY=

# Base de données
DB_TYPE=mariadb
MARIADB_HOST=localhost
MARIADB_PORT=3306
MARIADB_USER=root
MARIADB_PASSWORD=
MARIADB_DATABASE=fusepoint_db

# Optionnel: désactiver l’insertion des templates par défaut à l’init
# DISABLE_DEFAULT_TEMPLATES=0